#!/bin/sh
case $BLOCK_BUTTON in
	1) volctl -t ;;
	2) "$TERMINAL" -e "$EDITOR" "$0" ;;
	3) setsid -f "$TERMINAL" -e pulsemixer ;;
	4) volctl -i 2 ;;
	5) volctl -d 2 ;;
esac

if [ "$(pamixer --sink 40 --get-mute)" = true ]; then
    printf "%s %s \nn" "ï€¦ðŸ—™"
    exit
fi

