# zathurarc - zathura document viewer
# gatoneg.ro

set window-title-basename "true"
set selection-clipboard "clipboard"

# tokyonight-gatonegro color theme
set notification-error-bg       "#ff00aa" # Red
set notification-error-fg       "#c1c1e1" # Foreground
set notification-warning-bg     "#ff8700" # Orange
set notification-warning-fg     "#363649" # Selection
set notification-bg             "#262639" # Background
set notification-fg             "#c1c1e1" # Foreground

set completion-bg               "#262639" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#262639" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#363649" # Selection
set completion-highlight-fg     "#c1c1e1" # Foreground

set index-bg                    "#262639" # Background
set index-fg                    "#c1c1e1" # Foreground
set index-active-bg             "#363649" # Current Line
set index-active-fg             "#c1c1e1" # Foreground

set inputbar-bg                 "#262639" # Background
set inputbar-fg                 "#c1c1e1" # Foreground
set statusbar-bg                "#262639" # Background
set statusbar-fg                "#c1c1e1" # Foreground

set highlight-color             "#ff8700" # Orange
set highlight-active-color      "#bb00ff" # Pink

set default-bg                  rgba(10,10,21,0.85) # Background
set default-fg                  "#c1c1e1" # Foreground

set render-loading              true
set render-loading-fg           "#262639" # Background
set render-loading-bg           "#c1c1e1" # Foreground

# Recolor mode settings
set recolor-lightcolor          rgba(38,38,57,0) # Background
set recolor-darkcolor           "#c1c1e1" # Foreground

# Startup options
set adjust-open width
set recolor true
