# symlinks
cmd follow_link %{{
  lf -remote "send ${id} select '$(readlink $f)'"
}}

cmd link %{{
	set -- $(cat ~/.local/share/lf/files)
	mode="$1"
	shift
	if [ "$#" -lt 1 ]; then
		lf -remote "send $id echo no files to link"
		exit 0
	fi
	case "$mode" in
		# symbolically copy mode is indicating a soft link
		copy) ln -sr -t . -- "$@";;
		# while a move mode is indicating a hard link
		move) ln -t . -- "$@";;
	esac
	rm ~/.local/share/lf/files
	lf -remote "send clear"
}}

cmd pdfcat %{{
	printf "File name: "
	read name
	pdftk $fx cat output "$name".pdf
}}

# jump to dir using fzf
cmd fzf_jump ${{
	res="$(fd -t d|fzf --reverse --header='Jump to location')"
	if [ -d "$res" ]; then
		cmd="cd"
	else
		cmd="select"
	fi
	lf -remote "send $id $cmd \"$res\""
}}

cmd paste-overwrite &{{
	set -f
	mode=$(head -1 ~/.local/share/lf/files)
	list=$(sed 1d ~/.local/share/lf/files)
	set -- _ $list; shift
	[ $# -gt 0 ] || exit
	case $mode in
		copy)
			rsync -rvP "$@" ./
			;;
		move)
			rsync -rvP --remove-source-files "$@" ./
			;;
	esac
	lf -remote 'save\nmove\n'
	lf -remote "send $id load"
	lf -remote "send $id echo \"\033[0;32mpasted $# file(s)\033[0m\""
}}

# set wallpaper
cmd setwall ${{
	xwallpaper --zoom "$f"
}}

