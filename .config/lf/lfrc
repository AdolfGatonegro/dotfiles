cmd empty ${{
	set -f
	prompt="Empty trash? [y/N] "
	clear; tput cup $((($(tput lines)-2)/2)) 0; tput bold
	printf "%*s" $((($(tput cols)+${#prompt})/2)) "$prompt"
	read ans
	[ $ans = "y" ] && rm -rf ~/.local/share/Trash/files/*
}}

