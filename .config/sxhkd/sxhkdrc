# ----------------------------------------------------------------------------
# sxhkdrc - simple x hotkey daemon config file
# gatoneg.ro
# ----------------------------------------------------------------------------

super + ctrl + s
	pkill -USR1 -x sxhkd

# Rofi
super + space
	rofi_run

super + c
	rofi_run -c

alt + Tab
	rofi_run -w

super + period
    rofi_run -e

super + x
	rofi_run -l

super + F2
	rofi_conf

# Programs
super + b
    firefox

super + shift + b
    firefox --private-window

super + t
    kitty

super + f
	kitty -e lf

super + shift + f
	pcmanfm

super + d
	discord

super + e
	kitty -e vim

#super + h
#    kitty --config /home/gatonegro/.config/kitty/arch.conf -e /usr/bin/distrobox-enter arch

# Screenshot
super + F4
	flameshot gui

super + shift + F4
	flameshot launcher

# System
ctrl + alt + o
	picom_toggle

# ctrl + alt + l
# 	betterlockscreen -l dim

ctrl + apostrophe
	dunstctl context

# Multimedia keys
XF86AudioRaiseVolume
    volume_ctl -i 2

XF86AudioLowerVolume
	volume_ctl -d 2

XF86AudioMute
    volume_ctl -t

XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

XF86AudioStop
    playerctl stop

XF86MonBrightnessUp
    backlight_ctl -inc 5

XF86MonBrightnessDown
    backlight_ctl -dec 5

XF86KbdBrightnessUp
    xbacklight -ctrl smc::kbd_backlight -inc 10

XF86KbdBrightnessDown
    xbacklight -ctrl smc::kbd_backlight -dec 10

super + shift + o
	link_handler
