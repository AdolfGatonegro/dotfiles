# ----------------------------------------------------------------------------
# sxhkdrc - simple x hotkey daemon config file
# gatoneg.ro
# ----------------------------------------------------------------------------

super + ctrl + s
	pkill -USR1 -x sxhkd

# Rofi
super + space
	dmenu_run -p "run:"

super + c
	rofi_run -c

alt + Tab
	rofi_run -w

super + period
    dmunicode

super + x
	rofi_run -l

super + F2
	dmconf

# Programs
super + b
    firefox

super + shift + b
    firefox --private-window

super + t
    st

super + f
	st -e lfpv

super + d
	discord

super + e
	st -e vim

super + F8
	rofi_mount

super + shift +F8
	rofi_umount

# Screenshot
super + F4
	flameshot gui

super + shift + F4
	flameshot launcher

# System
ctrl + alt + o
	picom_toggle

ctrl + apostrophe
	dunstctl context

# Multimedia keys
XF86AudioRaiseVolume
    volctl -i 2

XF86AudioLowerVolume
	volctl -d 2

XF86AudioMute
    volctl -t

XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

XF86AudioStop
    playerctl stop

XF86MonBrightnessUp
    backlightctl -inc 5

XF86MonBrightnessDown
    backlightctl -dec 5

XF86KbdBrightnessUp
    xbacklight -ctrl smc::kbd_backlight -inc 10

XF86KbdBrightnessDown
    xbacklight -ctrl smc::kbd_backlight -dec 10

super + shift + o
	linkhandler
