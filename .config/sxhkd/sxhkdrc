# vim: set foldmarker={{,}} foldlevel=0 foldmethod=marker nospell:
# sxhk config
# gatoneg.ro

# restart sxhk
super + ctrl + s
	pkill -USR1 -x sxhkd

# dmenu {{
super + space
	dmrun -p "run:"

# key chord dmenu scripts
# books, unicode, multi-monitor
super + s ; {k,u,p,l}
    {books,dmunicode,dmdisplay,linkhandler}

# power menu
super + x
	dmsys

# browser menu
super + shift + b
    dmbrowser

# bookmarks
super + shift + m ; {m,a}
    bmks {dmenu,add}

# usb mounter
super + F8
	mounter

# usb unmounter
super + shift +F8
	unmounter

# }}

# dwmc {{
# setlayout
super + ctrl {t,d,g,m}
	dwmc setlayoutex {0,1,2,4}

# }}

# applications {{
# terminal
super + t
    st

# browser
super + b
    librewolf

# discord
super + d
	discord

# text editor
super + {e,shift + e}
	{st -e nvim,emacsclient -c -a emacs}

# file manager
super + f
	st -e yazi

super + shift + f
	emacsclient -c -a emacs --eval "(dired nil)"

# notes
super + n
	obsidian

# }}

# Screenshots {{

super + F4
	flameshot gui

Print
	flameshot gui

super + shift + F4
	flameshot launcher

shift + Print
	flameshot launcher

# }}

# Media keys {{

# XF86Audio{Raise,Lower}Volume
#     volctl -{i,d} 2; pkill -RTMIN+10 dwmblocks
#
# XF86AudioMute
#     volctl -t; pkill -RTMIN+10 dwmblocks
#
# XF86Audio{Play,Next,Prev,Stop}
#     playerctl {play-pause,next,previous,stop}; pkill -RTMIN+13 dwmblocks
#
# shift + XF86Audio{Next,Prev}
#     playerctl position 10{+,-}
#
# XF86MonBrightness{Up,Down}
#     backlightctl -{inc,dec} 5
#
# XF86KbdBrightness{Up,Down}
# 	brightnessctl --device=smc::kbd_backlight set {+,-}10%
#
# XF86Display
# 	dmdisplay
#
# XF86Sleep
# 	dmsys
#
# XF86PowerOff
# 	dmsys
# }}
