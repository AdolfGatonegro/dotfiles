# zsh-aliases
# gatoneg.ro
# last update: 2022-10-13

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias zsh-update-plugins="find \"$ZDOTDIR/plugins\" -type d -exec test -e '{}/.git' ';' -print0 | xargs -I {} -0 git -C {} pull -q"

alias grep="rg"
alias df="df -h"
alias free="free -m"
alias setkbd="setxkbmap -model pc104 -layout us -variant altgr-intl -option caps:escape && xmodmap $XDG_CONFIG_HOME/X11/Xmodmap && xset r rate 250 100"

# Aliases - pacman
alias ch="checkupdates ; pikaur -Qua 2>/dev/null"
alias pkgi="pikaur -S"
alias pkgr="pikaur -Rns"
alias pkgq="pikaur -Qi"
alias pkgsi="pikaur -Si"
alias pkgs="pikaur -Ss"
alias update="pikaur -Syu"

alias pacclean="sudo pacman -Rns $(pacman -Qtdq)"
alias pacunlock="sudo rm /var/lib/pacman/db.lck"
alias paclog="cat /var/log/pacman.log"
alias mirrors="sudo reflector --latest 20 --fastest 20 --number 10 --sort rate --verbose --save /etc/pacman.d/mirrorlist"

# Aliases - Edit system config files
alias vpacman="sudoedit /etc/pacman.conf"
alias vmirrorlist="sudoedit /etc/pacman.d/mirrorlist"
alias vfstab="sudoedit /etc/fstab"

# Aliases - Dotfiles repo
alias repos="git-summary $HOME/git"

alias config="git --git-dir=$HOME/git/dotfiles --work-tree=$HOME"

# Aliases - git
alias gst="git status"
alias ga="git add"
alias gc="git commit"
alias gco="git checkout"
alias gl="git pull"
alias gp="git push"
alias gd="git diff"
alias gb="git branch"
alias gba="git branch -a"
alias gdl="git branch -d"

# Aliases - Commands and shortcuts
alias ls="exa -l --color=always --group-directories-first"
alias la="exa -al --color=always --group-directories-first"
alias lh="exa -al | rg '^\.'"
alias tree="exa --tree --icons --color=always"

alias cp="cp -i -v"
alias mv="mv -i -v"
alias rm="rm -I -v"

alias _="sudo"
alias cat="bat -p"
alias less="bat"
alias vf="vifmrun ."
alias wget="wget --hsts-file=$XDG_CACHE_HOME/.wget-hist"
alias yta="yt-dlp -x"

# Docker/Distrobox aliases 
alias hugo='docker run --rm -it -v $PWD:/src --user 1000 klakegg/hugo'
alias hugosrv='docker run --rm -it -v $PWD:/src -p 1313:1313 --user 1000 klakegg/hugo server'
